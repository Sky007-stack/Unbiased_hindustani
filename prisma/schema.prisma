// Prisma schema for Unbiased Hindustani
// Database: PostgreSQL (Neon free tier for production, SQLite for local dev)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ─── NextAuth.js Models ───────────────────────────────────
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ─── User Model ───────────────────────────────────────────
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          String    @default("user") // "admin" | "editor" | "user"
  accounts      Account[]
  sessions      Session[]
  articles      NewsArticle[] @relation("AuthorArticles")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

// ─── News Article Model ───────────────────────────────────
model NewsArticle {
  id            Int      @id @default(autoincrement())
  title         String
  summaryPoints String   @db.Text // JSON array stored as string
  fullContent   String?  @db.Text
  youtubeUrl    String?  // Optional — AI-generated articles may not have YouTube
  imageUrl      String?  // Optional thumbnail/image URL
  category      String   @default("Politics")
  tags          String?  @db.Text // JSON array stored as string
  published     Boolean  @default(true)
  source        String   @default("AI Generated") // "AI Generated", "YouTube", "Search", etc.
  authorId      String?
  author        User?    @relation("AuthorArticles", fields: [authorId], references: [id])
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// ─── Trending Topic Model ─────────────────────────────────
model TrendingTopic {
  id          Int      @id @default(autoincrement())
  title       String
  description String?  @db.Text
  category    String   // "Politics", "Technology", "Business", "Sports", "Entertainment", etc.
  source      String?  // "Google Trends", "AI Generated", etc.
  url         String?
  trendScore  Int      @default(0)
  region      String   @default("India")
  fetchedAt   DateTime @default(now())
  expiresAt   DateTime?
}

// ─── Category Model ───────────────────────────────────────
model Category {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  slug        String   @unique
  description String?
  icon        String?
  createdAt   DateTime @default(now())
}
